<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".view.HelpRequestsActivity">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_32"
                android:paddingTop="@dimen/dimen_32"
                android:paddingRight="@dimen/dimen_32"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_icon_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="@string/get_volunteers"
                    android:textColor="#006DC2"
                    android:textSize="@dimen/dimen_text_32" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_medium"
                android:paddingLeft="@dimen/dimen_32"
                android:paddingRight="@dimen/dimen_32"
                android:text="@string/give_a_brief_description_about_your_help"
                android:textColor="#C6C6C6"
                android:textSize="@dimen/dimen_text_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:paddingLeft="@dimen/dimen_32"
                android:paddingTop="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_32"
                android:text="@string/title"
                android:textColor="#006DC2"
                android:textSize="@dimen/dimen_text_20" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_56"
                app:boxStrokeColor="#424563"
                app:boxStrokeWidth="@dimen/dimen_1"
                android:hint="@string/title_hint"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:paddingLeft="@dimen/dimen_32"
                android:paddingTop="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_32"
                android:text="@string/description"
                android:textColor="#006DC2"
                android:textSize="@dimen/dimen_text_20" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_94"
                app:boxStrokeColor="#424563"
                app:boxStrokeWidth="@dimen/dimen_1"
                android:hint="@string/desc_help"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:layout_centerVertical="true"
                    android:text="@string/volunteers_needed"
                    android:textColor="#006DC2"
                    android:textSize="@dimen/dimen_text_20" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_icon_help"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/dimen_64"
                        android:layout_marginStart="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_40"
                        app:boxStrokeColor="#424563"
                        app:boxStrokeWidth="@dimen/dimen_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:textSize="@dimen/dimen_text_12"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:layout_centerVertical="true"
                    android:text="@string/time"
                    android:textColor="#006DC2"
                    android:textSize="@dimen/dimen_text_20" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_icon_clock"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="@dimen/dimen_64"
                        android:layout_marginStart="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_40"
                        app:boxStrokeColor="#424563"
                        app:boxStrokeWidth="@dimen/dimen_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:textSize="@dimen/dimen_text_12"
                            android:textAlignment="center"
                            android:layout_height="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:layout_centerVertical="true"
                    android:text="@string/for_kids"
                    android:textColor="#006DC2"
                    android:textSize="@dimen/dimen_text_20" />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:thumbTint="#006DC2" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/google_sans_bold"
                    android:layout_centerVertical="true"
                    android:text="@string/reveal_identity"
                    android:textColor="#006DC2"
                    android:textSize="@dimen/dimen_text_20" />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:thumbTint="#006DC2" />
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/get_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="@string/get_help"
                android:textAllCaps="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_clicking_you_agree_to_the_terms_and_conditions_of_this_app"
                android:textColor="#8C929E"
                android:fontFamily="@font/google_sans_medium"
                android:textSize="@dimen/dimen_text_16"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_below="@id/get_help"/>
        </LinearLayout>
    </ScrollView>
</layout>